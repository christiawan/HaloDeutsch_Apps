<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#365374"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/bglayout_style3"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@+id/imageView1"
                        android:text="Was ist richtig? Klicken Sie."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bgquiz"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/quis1bleistift" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/imageView1"
                        android:layout_toRightOf="@+id/imageView1" >

                        <RadioButton
                            android:id="@+id/satua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:text="Torte"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/satub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ein Bleistift"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/satuc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/satud"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textColor="#000" />
                    </RadioGroup>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bgquiz"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/quis1buch" />

                    <RadioGroup
                        android:id="@+id/RadioGroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/ImageView02"
                        android:layout_toRightOf="@+id/ImageView02" >

                        <RadioButton
                            android:id="@+id/duaa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:text="Torte"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/duab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ein Buchu"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/duac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/duad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textColor="#000" />
                    </RadioGroup>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bgquiz"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/quis1computer" />

                    <RadioGroup
                        android:id="@+id/RadioGroup3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/ImageView03"
                        android:layout_toRightOf="@+id/ImageView03" >

                        <RadioButton
                            android:id="@+id/tigaa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:text="drei Computer"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/tigab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ein Bleistift"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/tigac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/tigad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textColor="#000" />
                    </RadioGroup>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bgquiz"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/ImageView04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/quis1kugelschreiber" />

                    <RadioGroup
                        android:id="@+id/RadioGroup04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/ImageView04"
                        android:layout_toRightOf="@+id/ImageView04" >

                        <RadioButton
                            android:id="@+id/empata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:text="Torte"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/empatb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ein Bleistift"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/empatc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="drei Kugelschreiber"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/empatd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textColor="#000" />
                    </RadioGroup>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bgquiz"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/quis1schwam" />

                    <RadioGroup
                        android:id="@+id/RadioGroup5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/ImageView01"
                        android:layout_toRightOf="@+id/ImageView01" >

                        <RadioButton
                            android:id="@+id/limaa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:text="Torte"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/limab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ein Bleistift"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/limac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textColor="#000" />

                        <RadioButton
                            android:id="@+id/limad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ein Schwam"
                            android:textColor="#000" />
                    </RadioGroup>
                </RelativeLayout>
            </LinearLayout>
			
		<Button
    android:id="@+id/OK"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/textView1"
    android:layout_alignParentRight="true"
            android:background="@drawable/bgdialog"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
    android:text="OK"/>	
			
        </LinearLayout>
    </ScrollView>

</LinearLayout>